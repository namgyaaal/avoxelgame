:Namespace lse
    ⎕FIX 'file://easy_na.apln'

    bool ← 'I1'
    i32 ← 'I4'
    u32 ← 'U4'
    u64 ← 'U8'
    ptr ← 'P-'
    cstr ← '<0C1[]'

    fns ← ⍬
    fns,←⊂ 'LSE_PollEvent' bool ⍬
    fns,←⊂ 'LSE_CheckEvent' bool i32
    fns,←⊂ 'LSE_GetKeyPressed' u32 ⍬

    fns,←⊂ 'LSE_GetMouseMove' ⍬ ('>'i32 '>'i32)

    ∇ load_lib path
      'lse'path easy_na.safe_load fns
    ∇
:EndNamespace
