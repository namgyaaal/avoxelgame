:Namespace sdl3
    bool ← 'I1'
    u8 ← 'U1'
    i32 ← 'I4'
    u32 ← 'U4'
    u64 ← 'U8'
    f32 ← 'F4'
    ptr ← 'P-'
    cstr ← '<0C1[]'
    f32_arr ← '<F4[]'


    FColor ← (f32 f32 f32 f32)
    GPUColorTargetInfo ← (ptr u32 u32 FColor i32 i32 ptr u32 u32 bool bool u8 u8)
    GPUDepthStencilTargetInfo ← (ptr f32 i32 i32 i32 i32 bool u8 u8 u8)
    GPUTextureCreateInfo ← (i32 i32 i32 u32 u32 u32 u32 i32 i32)
    GPUSamplerCreateInfo ← (i32 i32 i32 i32 i32 i32 f32 f32 i32 f32 f32 bool bool u8 u8 i32)

    fns ← (
        ⍝ Core Stuff
    'SDL_Init' bool u32
    'SDL_Quit' ⍬ ⍬
    'SDL_ClearError' bool ⍬
    'SDL_GetError' ptr ⍬
    'SDL_CreateWindow' ptr (cstr i32 i32 u64)
    'SDL_DestroyWindow' ⍬ ptr
    'SDL_SetWindowMouseGrab' bool (ptr bool)
    'SDL_PumpEvents' ⍬ ⍬
    'SDL_LoadFile' ptr (cstr '>' u64)
    'SDL_free' ⍬ ptr
    'SDL_GetTicks' u32 ⍬
    'SDL_memcpy' ptr (ptr ptr u64)
        ⍝ Surfaces
    'SDL_CreateSurface' ptr (i32 i32 i32)
    'SDL_DestroySurface' ⍬ ptr
    'SDL_LockSurface' bool ptr
    'SDL_UnlockSurface' ⍬ ptr
    'SDL_ConvertSurface' ptr (ptr i32)
    'SDL_WriteSurfacePixelFloat' bool (ptr i32 i32 f32 f32 f32 f32)
    'SDL_SaveBMP' bool (ptr cstr)
    'SDL_LoadBMP' ptr cstr
        ⍝ Putting SDL3_image here since it's in the shared object too
    'IMG_Load' ptr cstr

        ⍝ GPU Stuff

        ⍝ Device
    'SDL_CreateGPUDevice' ptr (u32 bool cstr)
    'SDL_DestroyGPUDevice' ⍬ ptr
    'SDL_ClaimWindowForGPUDevice' bool (ptr ptr)
    'SDL_WaitForGPUIdle' bool ptr
        ⍝ Command Buffer
    'SDL_AcquireGPUCommandBuffer' ptr ptr
    'SDL_SubmitGPUCommandBuffer' ⍬ ptr
        ⍝ Swapchain
    'SDL_GPUTextureSupportsFormat' bool (ptr i32 i32 u32)
    'SDL_WaitAndAcquireGPUSwapchainTexture' bool (ptr ptr '>' ptr '>' u32 '>' u32)
    'SDL_GetGPUSwapchainTextureFormat' i32 (ptr ptr)
        ⍝ Buffers
    'SDL_CreateGPUBuffer' ptr (ptr '<' (u32 u32 u32))
    'SDL_ReleaseGPUBuffer' ⍬ (ptr ptr)
    'SDL_UploadToGPUBuffer' ⍬ (ptr '<' (ptr u32) '<' (ptr u32 u32) bool)
    'SDL_DownloadFromGPUBuffer' ⍬ (ptr '<' (ptr u32 u32) '<' (ptr u32))
    'SDL_CreateGPUTransferBuffer' ptr (ptr '<' (u32 u32 u32))
    'SDL_ReleaseGPUTransferBuffer' ⍬ (ptr ptr)
    'SDL_MapGPUTransferBuffer' ptr (ptr ptr bool)
    'SDL_UnmapGPUTransferBuffer' ⍬ (ptr ptr)
        ⍝ Shaders
        ⍝ Creation covered by LSE_CreateGPUShader
    'SDL_ReleaseGPUShader' ⍬ (ptr ptr)
        ⍝ Uniforms (F32 default)
    'SDL_PushGPUVertexUniformData' ⍬ (ptr u32 f32_arr u32)
    'SDL_PushGPUFragmentUniformData' ⍬ (ptr u32 f32_arr u32)
        ⍝ Pipeline Handling (Creation managed by LSE)
    'SDL_BindGPUGraphicsPipeline' ⍬ (ptr ptr)
    'SDL_ReleaseGPUGraphicsPipeline' ⍬ (ptr ptr)
        ⍝ Texturing/Sampling
    'SDL_CreateGPUTexture' ptr (ptr '<' GPUTextureCreateInfo)
    'SDL_SetGPUTextureName' ⍬ (ptr ptr cstr)
    'SDL_ReleaseGPUTexture' ⍬ (ptr ptr)
    'SDL_CreateGPUSampler' ptr (ptr '<' GPUSamplerCreateInfo)
    'SDL_ReleaseGPUSampler' ⍬ (ptr ptr)
    'SDL_GenerateMipmapsForGPUTexture' ⍬ (ptr ptr)
