    'SDL_BeginGPURenderPass' ptr (ptr '<' GPUColorTargetInfo u32 '<' GPUDepthStencilTargetInfo)
    'SDL_EndGPURenderPass' ⍬ ptr
    'SDL_BeginGPUCopyPass' ptr ptr
    'SDL_EndGPUCopyPass' ptr ptr
        ⍝ Binding
    'SDL_BindGPUVertexBuffers' ⍬ (ptr u32 '<' (ptr u32) '[]' u32)
    'SDL_BindGPUIndexBuffer' ⍬ (ptr '<' (ptr u32) '[]' i32)
    'SDL_BindGPUFragmentSamplers' ⍬ (ptr u32 '<' (ptr ptr) '[]' u32)
    'SDL_UploadToGPUTexture' ⍬ (ptr '<' (ptr u32 u32 u32) '<' (ptr u32 u32 u32 u32 u32 u32 u32 u32) bool)
        ⍝ Drawing
    'SDL_DrawGPUPrimitives' ⍬ (ptr u32 u32 u32 u32)
    'SDL_DrawGPUIndexedPrimitives' ⍬ (ptr u32 u32 u32 i32 u32)
    )

