#include <metal_stdlib>
using namespace metal;

struct VertexIn {
    float3 position [[attribute(0)]];
    float4 color    [[attribute(1)]];
};

struct VertexOut {
    float4 position [[position]];
    float4 color;
};

struct Uniforms {
    float4x4 model;
};

vertex VertexOut vertex_main(VertexIn in [[stage_in]], constant Uniforms& uni   [[buffer(0)]])
{
    VertexOut out;
    out.position = uni.model * float4(in.position, 1.0);
    out.color = in.color;
    return out;
}
